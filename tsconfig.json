{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"lib": [
			"ESNext"
		],
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}